{% extends 'base.html.twig' %}

{% block title %} Hello RegisterController! {% endblock %}

{% block body %}
    <div class="table container">
        <h1 class="text-center pb-5 pt-3"> Memberliste </h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Vorname</th>
                <th scope="col">Email</th>
                <th scope="col">Option</th>
            </tr>
            </thead>
            <tbody>
            {% for user in user %}
                <tr>
                    <th scope="row">{{ user.id }} </th>
                    <td>{{ user.firstName }} </td>
                    <td>{{ user.email }} </td>
                    <td><a class="btn btn-warning" href="{{ path('app_edit_user', {id: user.id}) }}">User editieren</a>
                        <a class="btn btn-danger" href="{{ path('app_delete_user', {id: user.id}) }}">User l√∂schen</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
